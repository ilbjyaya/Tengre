                { label: '商品编号', name: "ProductCode", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '品牌', name: "Brand", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '色号', name: "ColorCode", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '花型', name: "StyleCode", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '施工位置', name: "OpPosition", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '单价', name: 'Price', width: 80, align: 'center', sortable: false, resizable: false },
                { label: '折扣', name: "OffRate", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '预估面积', name: "EstimateSize", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '预估金额', name: "EstimateAmount", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '实际面积', name: "RealSize", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '实际金额', name: "RealAmount", width: 100, align: 'center', sortable: false, resizable: false },
                //{ label: '单位', name: "UnitId", width: 100, align: 'center', sortable: false, resizable: false },
                { label: '数量', name: 'Qty', width: 80, align: 'center', sortable: false, resizable: false, hidden: true },

                { label: '应售金额', name: 'Amount', width: 80, align: 'center', sortable: false, resizable: false },

                { label: '税率(%)', name: 'TaxRate', width: 80, align: 'center', sortable: false, resizable: false, hidden: true },
                { label: '含税单价', name: 'Taxprice', width: 80, align: 'center', sortable: false, resizable: false, hidden: true },
                { label: '税额', name: 'Tax', width: 80, align: 'center', sortable: false, resizable: false, hidden: true },
                { label: '含税金额', name: 'TaxAmount', width: 80, align: 'center', sortable: false, resizable: false, hidden: true },
                { label: '说明信息', name: 'Description', width: 200, align: 'left', sortable: false, resizable: false }
            ],
            pager: false,
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            footerrow: true,
            gridComplete: function () {
                //合计
                $(this).footerData("set", {
                    "UnitId": "合计：",
                    "EstimateSize": "<span id='TotalEstimateSize'>0.00</span>",
                    "EstimateAmount": "<span id='TotalEstimateAmount'>0.00</span>",
                    "RealSize": "<span id='TotalRealSize'>0.00</span>",
                    "RealAmount": "<span id='TotalRealAmount'>0.00</span>",
                    "Amount": "<span id='TotalAmount'>0.00</span>"
                });
                $('table.ui-jqgrid-ftable td[aria-describedby="gridTable_UnitId"]').prevUntil().css("border-right-color", "#fff");
            }
        });
        ////表头合并
        //$grid.jqGrid('setGroupHeaders', {
        //    useColSpanStyle: true,
        //    groupHeaders: [
        //      { startColumnName: 'ProductName', numberOfColumns: 5, titleText: '商品信息' },
        //        { startColumnName: 'OffRate', numberOfColumns: 5, titleText: '价格信息' }
        //    ]
        //});
        //默认添加13行 空行
        for (var i = 1; i < 13; i++) {
            var rowdata = {
                OrderEntryId: '<input name="OrderEntryId" type="text" />',
                ProductName: '<div class="product"><input name="ProductName" readonly type="text" class="editable" isvalid="no" checkexpession="NotNull"/><span class="ui-icon-ellipsis"></span></div>',
                ProductCode: '<input name="ProductCode" type="text" class="editable center disabled" /><input name="ProductId" type="hidden" />',

                BrandId: '<input name="BrandId" type="text" class="editable center"  type="hidden"/>',
                Brand: '<input name="Brand" type="text"  class="editable center disabled"  />',// '<div class="product"><input name="Brand" readonly type="text" class="editable" isvalid="no" /><span class="ui-icon-ellipsis1"></span></div>', //
                ColorCodeId: '<input name="ColorCodeId" type="text" class="editable center"  type="hidden"/>',
                ColorCode: '<div class="product"><input name="ColorCode" readonly type="text" class="editable" isvalid="no" /><span class="ui-icon-ellipsis2"></span></div>', //'<input name="ColorCode" type="text" class="editable center" />',
                StyleCodeId: '<input name="StyleCodeId" type="text" class="editable center"  type="hidden"/>',
                StyleCode: '<div class="product"><input name="StyleCode" readonly type="text" class="editable" isvalid="no" /><span class="ui-icon-ellipsis3"></span></div>', //'<input name="StyleCode" type="text" class="editable center" />',
                OpPositionId: '<input name="OpPositionId" type="text" class="editable center"  type="hidden"/>',
                OpPosition: '<div class="product"><input name="OpPosition" readonly type="text" class="editable" isvalid="no" /><span class="ui-icon-ellipsis1"></span></div>', // '<input name="OpPosition" type="text" class="editable center" />',
                Price: '<input name="Price" type="text" class="editable center decimal" isvalid="no" checkexpession="Double" />',
                OffRate: '<input name="OffRate" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  />',
                EstimateSize: '<input name="EstimateSize" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  />',
                EstimateAmount: '<input name="EstimateAmount" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double" />',
                RealSize: '<input name="RealSize" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  />',
                RealAmount: '<input name="RealAmount" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double" />',
                // UnitId: '<input name="UnitId" type="text" class="editable center" />',
                //Qty: '<input name="Qty" type="text" class="editable center decimal" isvalid="no" checkexpession="Double" type="hidden"/>',

                Amount: '<input name="Amount" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  />',
                //TaxRate: '<input name="TaxRate" type="text" class="editable center decimal" isvalid="no" checkexpession="Double"  type="hidden"/>',
                //Taxprice: '<input name="Taxprice" type="text" class="editable center decimal" isvalid="no" checkexpession="Double"  type="hidden"/>',
                //Tax: '<input name="Tax" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  type="hidden"/>',
                //TaxAmount: '<input name="TaxAmount" type="text" class="editable center decimal disabled" isvalid="no" checkexpession="Double"  type="hidden"/>',
                Description: '<input name="Description" type="text" class="editable" />',
            }
            $grid.jqGrid('addRowData', i, rowdata);

        };
        $grid.find('.decimal').attr('onfocus', 'IsMoney(this.id)');
        $grid.find('input').attr("disabled", "disabled");
        $grid.find("tbody tr:eq(1)").find('input').removeAttr('disabled').attr("isvalid", "yes");
        $grid.find('.disabled').attr("disabled", "disabled");

        //色号
        $("#ColorCode").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson?encode=Client_OpGroup",
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "360px",
            width: "280px",
        });


        //商品名称事件
        $('input[name="ProductName"]').focus(function () {
            $('.ui-icon-ellipsis').hide();
            $(this).next('.ui-icon-ellipsis').show();
            $(this).Contextmenu();
        });
        //选择商品事件
        $('.ui-icon-ellipsis').click(function () {

            var $ellipsis = $(this);
            dialogOpen({
                id: "OptionProduct",
                title: '选择商品',
                url: '/CustomerManage/Order/OptionProduct',
                width: "600px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick(function (data) {
                        if ($grid.find('[role=row]').find('[data-value=' + data.ProductId + ']').length == 0) {
                            $ellipsis.parents('[role=row]').find('input[name="ProductName"]').val(data.ProductName);
                            $ellipsis.parents('[role=row]').find('input[name="ProductCode"]').val(data.ProductCode).attr('data-value', data.ProductId);
                            $ellipsis.parents('[role=row]').find('input[name="ProductId"]').val(data.ProductId);
                            $ellipsis.parents('[role=row]').find('input[name="BrandId"]').val(data.BrandId);
                            $ellipsis.parents('[role=row]').find('input[name="Brand"]').val(data.Brand);
                            //$ellipsis.parents('[role=row]').find('input[name="ColorCodeId"]').val(data.ColorCodeId);
                            //$ellipsis.parents('[role=row]').find('input[name="ColorCode"]').val(data.ColorCode);
                            //$ellipsis.parents('[role=row]').find('input[name="StyleCodeId"]').val(data.StyleCodeId);
                            //$ellipsis.parents('[role=row]').find('input[name="StyleCode"]').val(data.StyleCode);
                            //$ellipsis.parents('[role=row]').find('input[name="OpPosition"]').val('');
                            $ellipsis.parents('[role=row]').find('input[name="OffRate"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="EstimateSize"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="EstimateAmount"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="RealSize"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="RealAmount"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="Qty"]').val('1.00');
                            $ellipsis.parents('[role=row]').find('input[name="Price"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="Amount"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="TaxRate"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="Taxprice"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="Tax"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input[name="TaxAmount"]').val('0.00');
                            $ellipsis.parents('[role=row]').find('input').removeAttr('disabled').attr("isvalid", "yes");
                            $ellipsis.parents('[role=row]').next().find('input').removeAttr('disabled');
                        } else {
                            top.dialogTop('商品信息已存在,不能重复添加', 'error');
                        }
                    });
                },
                btn: ['确认选中', '关闭']
            });
        });


        //色号事件
        $('input[name="ColorCode"]').focus(function () {
            $('.ui-icon-ellipsis2').hide();
            $(this).next('.ui-icon-ellipsis2').show();
            $(this).Contextmenu();
        });
        //选择色号事件
        $('.ui-icon-ellipsis2').click(function () {
            var ItemCode = "Client_ColorCodeOption";
            var $ellipsis = $(this);
            var ProductCode = $(this).parents('[role=row]').find('input[name="ProductCode"]').val();

            if (!ProductCode) { dialogMsg('请先选择商品信息！', 0); return; }

            dialogOpen({
                id: "OptionColor",
                title: '选择色号',
                url: '/CustomerManage/Order/OptionColor?ProductCode=' + ProductCode,

                width: "600px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick(function (data) {
                        $ellipsis.parents('[role=row]').find('input[name="ColorCodeId"]').val(data.ItemValue);
                        $ellipsis.parents('[role=row]').find('input[name="ColorCode"]').val(data.ItemName);
                    });
                },
                btn: ['确认选中', '关闭']
            });
        });

        //花型事件
        $('input[name="StyleCode"]').focus(function () {
            $('.ui-icon-ellipsis3').hide();
            $(this).next('.ui-icon-ellipsis3').show();
            $(this).Contextmenu();
        });
        //选择花型事件
        $('.ui-icon-ellipsis3').click(function () {
            var ItemCode = "Client_StyleCodeOption";
            var $ellipsis = $(this);
            var ProductCode = $(this).parents('[role=row]').find('input[name="ProductCode"]').val();
            if (!ProductCode) { dialogMsg('请先选择商品信息！', 0); return; }
            dialogOpen({
                id: "OptionStyleCode",
                title: '选择花型',
                url: '/CustomerManage/Order/OptionStyle?ProductCode=' + ProductCode,
                width: "600px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick(function (data) {
                        $ellipsis.parents('[role=row]').find('input[name="StyleCodeId"]').val(data.ItemValue);
                        $ellipsis.parents('[role=row]').find('input[name="StyleCode"]').val(data.ItemName);
                        $ellipsis.parents('[role=row]').find('input[name="Price"]').val(data.Price);
                    });
                },
                btn: ['确认选中', '关闭']
            });
        });

        //施工位置
        $('input[name="OpPosition"]').focus(function () {
            $('.ui-icon-ellipsis1').hide();
            $(this).next('.ui-icon-ellipsis1').show();
            $(this).Contextmenu();
        });
        //选择施工位置事件
        $('.ui-icon-ellipsis1').click(function () {
            var ItemCode = "Client_OpPositionCodeOption";
            var $ellipsis = $(this);
            dialogOpen({
                id: "OptionPosition",
                title: '选择施工位置',
                url: '/CustomerManage/Order/OptionData?ItemCode=' + ItemCode,
                width: "600px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick(function (data) {
                        $ellipsis.parents('[role=row]').find('input[name="OpPosition"]').val(data.ItemName);
                    });
                },
                btn: ['确认选中', '关闭']
            });
        });

        //价格文本框事件
        $grid.find('.decimal').click(function () {
            $(this).select();
        });
        //价格文本框换算
        $grid.find('.decimal').keyup(function () {
            var _inputName = $(this).attr('name');
            var $EstimateSize = $(this).parents('[role=row]').find('input[name="EstimateSize"]');                    //预估面积
            var $EstimateAmount = $(this).parents('[role=row]').find('input[name="EstimateAmount"]');                    //预估金额
            var $RealSize = $(this).parents('[role=row]').find('input[name="RealSize"]');                    //实际面积
            var $RealAmount = $(this).parents('[role=row]').find('input[name="RealAmount"]');                    //实际金额

            //var $Qty = $(this).parents('[role=row]').find('input[name="Qty"]');                    //数量
            var $Qty = $(this).parents('[role=row]').find('input[name="RealSize"]');                    //数量
            var $Price = $(this).parents('[role=row]').find('input[name="Price"]');                //单价
            var $Amount = $(this).parents('[role=row]').find('input[name="Amount"]');              //应售金额
            var $TaxRate = $(this).parents('[role=row]').find('input[name="TaxRate"]');            //税率(%)
            var $Taxprice = $(this).parents('[role=row]').find('input[name="Taxprice"]');          //含税单价
            var $Tax = $(this).parents('[role=row]').find('input[name="Tax"]');                    //税额
            var $TaxAmount = $(this).parents('[role=row]').find('input[name="TaxAmount"]');        //含税金额

            //预估面积*单价=预估金额
            $EstimateAmount.val(toDecimal($EstimateSize.val() * $Price.val()));
            //实际面积*单价=实际金额
            $RealAmount.val(toDecimal($RealSize.val() * $Price.val()));

            //合计
            var TotalEstimateSize = 0.00, TotalEstimateAmount = 0.00, TotalRealSize = 0.00, TotalRealAmount = 0.00, TotalQty = 0.00, TotalPrice = 0.00, TotalAmount = 0.00, TotalTaxprice = 0.00, TotalTax = 0.00, TotalTaxAmount = 0.00;
            $grid.find("tbody tr").each(function (i) {
                var Amount = $(this).find('td:eq(15)').find('input').val();
                if (Amount != "" && Amount != undefined) {
                    TotalAmount += Number(Amount);
                }
                var EstimateSize = $(this).find('td:eq(10)').find('input').val();
                if (EstimateSize != "" && EstimateSize != undefined) {
                    TotalEstimateSize += Number(EstimateSize);
                }
